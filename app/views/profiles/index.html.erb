<%= link_to t('.new', :default => t("helpers.links.new")),
            new_profile_path,
            :class => 'btn btn-primary' %>

<%- model_class = Profile -%>
<div class="page-header">
  <h1>Profile Information</h1>
</div>
<table class="table table-striped">

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
         <!--...........<th><%= model_class.human_attribute_name(:id) %></th>  ...--->

        <!---<td><%= link_to profile.id, profile_path(profile) %></td> -->

          <th><%= model_class.human_attribute_name(:fname) %></th>
        <td><%= profile.fname %></td><tr>

        <th><%= model_class.human_attribute_name(:lname) %></th>
        <td><%= profile.lname %></td></tr>

 <th><%= model_class.human_attribute_name(:email) %></th>
        <td><%= profile.email %></td><tr>

        <th><%= model_class.human_attribute_name(:phone_no) %></th>
        <td><%= profile.phone_no %></td>
</tr>
        <tr> <th><%= model_class.human_attribute_name(:home_city) %></th>
        <td><%= profile.home_city %></td></tr>


         <tr><th><%= model_class.human_attribute_name(:created_at) %></th>
        <td><%=l profile.created_at %></td><tr></tr>

         <th><%=t '.actions', :default => t("helpers.actions") %></th></tr>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_profile_path(profile), :class => 'btn btn-default btn-xs' %><td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      profile_path(profile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

